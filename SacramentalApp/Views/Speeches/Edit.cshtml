@model SacramentalApp.Models.Speech

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Speech</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="MeetingId" class="form-control" />

            <div class="form-group">
                <label asp-for="NameSpeaker" class="control-label"></label>
                <input asp-for="NameSpeaker" class="form-control" />
                <span asp-validation-for="NameSpeaker" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Topic" class="control-label"></label>
                <input asp-for="Topic" class="form-control" />
                <span asp-validation-for="Topic" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input class="btn btn-primary" type="submit" value="Save"  />
                <a class="btn btn-warning" asp-controller="Meetings" asp-action="EditSpeakers" asp-route-id="@Model.MeetingId">Back to Meeting</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
