@model SacramentalApp.Models.Meeting

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Meeting</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ConductingLeader)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ConductingLeader)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OpeningSong)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OpeningSong)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OpeningPrayer)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OpeningPrayer)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SacramentHymn)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SacramentHymn)
        </dd>




        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Speeches)
        </dt>
        <dd class="col-sm-10">

          
            <a class="btn btn-success" asp-controller="Speeches" asp-action="Create" asp-route-id="@Model.Id">Create</a>

            <table class="table">
                <thead>
                    <tr>
                        <th>Speaker</th>
                        <th>Topic</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Speeches)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.NameSpeaker)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Topic)
                            </td>
                            <td>
                                <a class="btn btn-primary" asp-controller="Speeches" asp-action="Edit" asp-route-id="@item.Id"><i class="fa fa-pencil-square-o"></i>Edit</a> 
                                <a class="btn btn-primary" asp-controller="Speeches" asp-action="Details" asp-route-id="@item.Id"><i class="fa fa-file-o"></i>Details</a> 
                                <a class="btn btn-danger" asp-controller="Speeches" asp-action="Delete" asp-route-id="@item.Id"><i class="fa fa-trash"></i>Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>


   

        </dd>

        @*end speeches*@

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CloseningSong)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CloseningSong)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CloseningPrayer)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CloseningPrayer)
        </dd>





    </dl>
</div>
<div>
    <a  class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Edit</a> 
    <a class="btn btn-warning" asp-action="Index">Back to List</a>
</div>
